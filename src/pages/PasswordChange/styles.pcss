.change-password-form-content {
    &__form {
        &__input-area * {
            margin: 5px 0 5px 0;
        }

        &__submit-area {
            display: flex;
            justify-content: center;
            margin: 70px 0 0;

            * {
                margin: 0;
            }
        }
    }

    &__avatar-area {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 50px;
    }
}
